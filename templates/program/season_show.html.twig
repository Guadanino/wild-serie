{% extends 'base.html.twig' %}

{% block title %}Série #
	{{ program.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			
			<p>{{ season.number }}</p>

				{% for episode in episodes %}
					<p> {{episode.number}} </p>
					<p> {{episode.title}} </p>
					<a href="{{ path("program_episode_show", {program: program.id , season: season.id , episode: episode.id}) }}">Consulter l'épisode</a>	
				{% endfor %}
			
			<a href="{{ path("program_show", {id: program.id}) }}">Retour programme</a>
		</div>
	</div>

	<a href="{{ path('program_index') }}">
		Retour à la liste des séries
	</a>
{% endblock %}
